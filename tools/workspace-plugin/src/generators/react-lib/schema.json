{
    "$schema": "https://json-schema.org/schema",
    "$id": "react-lib",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Library name (e.g. my-lib)",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "pattern": "^^[a-z-]+$",
            "x-priority": "important",
            "x-prompt": "What name would you like to use?"
        }
    },
    "required": ["name"]
}
